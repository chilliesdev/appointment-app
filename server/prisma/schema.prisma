// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  name String
  hash  String

  host Appointment[] @relation(name: "hostId")
  guest Appointment[] @relation(name: "guestId")
  federatedCredential FederatedCredential[]
}

// To External logins
model FederatedCredential {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  provider String
  subject String

  userId Int
  user User @relation(fields: [userId], references: [id])
}

model Appointment {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  date DateTime
  duration Int
  name String
  description String?

  hostId Int
  host User @relation(fields: [hostId], references: [id], name: "hostId")

  guestId Int
  guest User @relation(fields: [guestId], references: [id], name: "guestId")
}
