<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Appointment Reminder</title>
</head>
<body>
  <h1>Appointment Reminder</h1>

  <h2>Title</h2>
  <p>{{ title}}</p>
  <h2>Host</h2>
  <p>{{ host }}</p>
  <p>{{ hostEmail }}</p>
  <h2>Date</h2>
  <p>{{ date}}</p>
  <h2>Time</h2>
  <p>{{ time }}</p>
  <h2>Duration</h2>
  <p>{{ duration }}</p>
  <h2>Description</h2>
  <div>{{ description }}</div>
</body>
</html>